{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"]
}
